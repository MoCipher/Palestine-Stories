model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  stories   Story[]
  createdAt DateTime @default(now())
}

model Story {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  mediaUrl  String?
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}